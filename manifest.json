{
    "name": "Boring Browser",
    "short_name": "Boring Browser",
    "description": "Fun, flashy websites keeping you distracted?  Now they can be boring!",
    "id": "boringbrowser@corydergrosse.github.io",
    "author": "Cory der Gro√üe",
    "homepage_url": "https://corydergrosse.github.io",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
      "16": "icons/icon_16.png",
      "48": "icons/icon_48.png",
      "96": "icons/icon_96.png"
    },
    "permissions": [
      "scripting",
      "storage",
      "nativeMessaging"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Boring Browser"
    },
    "content_scripts": [
      {
        "js": ["content.js"],
        "matches": ["<all_urls>"]
      }
    ]
}
